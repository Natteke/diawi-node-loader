{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": false,
        "baseUrl": "./",
        "paths": {
            "@app/*": [
                "src/*"
            ]
        },
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/core/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
